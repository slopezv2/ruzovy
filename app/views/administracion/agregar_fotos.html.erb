<h1>Agregar fotos</h1>
<div class="grid">
    <div class="col-md-3"></div>
    <div class="col-md-6 col-xs-12">
        <%= form_tag '/cargar_imagen' do %>
            <div class="form-group">
                <label for="inputCategoria" class="">Categoria</label>
                <%= select_tag "inputCategoria", raw("<option>Aretas</option><option>Pulseras</option><option>Collares</option><option>Anillos</option><option>Novedades</option>"), class: 'form_control', required: 'true' %>
             </div>
             <div class="form-group">
                <label for="inputURL" class="">URL de la imagen</label>
                <%= text_field_tag 'inputURL', nil, class: 'form-control', placeholder: "http://imgur/dfdsgg.jpg", required: 'true' %>
             </div>
             <div class="form-group">
                <label for="inputDescription" class="">URL de la imagen</label>
                <%= text_area_tag 'inputDescription', nil, class: 'form-control', placeholder: "Breve descripciÃ³n de la imagen", required: 'true' %>
             </div>
             <div class="form-group">
                <%= submit_tag 'Guardar', class: "btn btn-lg btn-primary btn-block" %>
             </div>
        <% end %>
    </div>
    <div class="col-md-3"></div>
</div>
